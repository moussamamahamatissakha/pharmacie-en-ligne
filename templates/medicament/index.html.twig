{% extends 'base.html.twig' %}

{% block title %}Add Medicament{% endblock %}

{% block container %}

 <div class="vh-100 d-flex justify-content-center align-items-center">
      <div class="container">
        <div class="row d-flex justify-content-center">
          <div class="col-12 col-md-8 col-lg-6">
